<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.libary.mapper.CategoryMapper">
    <insert id="save">
        insert into category(name, remark) values (#{name}, #{remark})
    </insert>
    <update id="updateById">
        update category
        set name = #{name}, phone = #{phone}, remark = #{remark}, updatetime = #{updatetime} where id = #{id}
    </update>
    <update id="resetPassById">
        update category
        set
            updatetime = #{updatetime},
            remark = #{remark}
        where id = #{id}
    </update>
    <delete id="deleteById">
        delete
        from category
        where id = #{id}
    </delete>
    <select id="list" resultType="com.example.libary.entity.Category">
        select *
        from category order by id desc
    </select>
    <select id="listByCondition" resultType="com.example.libary.entity.Category">
        select * from category
        <where>
            <if test="name!= null and name != ''">
                name like concat('%',#{name},'%')
            </if>
            <if test="remark != null and remark != ''">
                and remark like concat('%',#{remark},'%')
            </if>
        </where>
        order by id desc
    </select>
    <select id="getById" resultType="com.example.libary.entity.Category">
        select * from category where id = #{id}
    </select>
</mapper>