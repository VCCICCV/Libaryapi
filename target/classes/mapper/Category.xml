<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.libary.mapper.CategoryMapper">
    <resultMap id="categoryMap" type="com.example.libary.entity.Category">
        <id column="id" property="id"></id>
        <result column="name" property="name"></result>
        <result column="remark" property="remark"></result>
        <result column="pid" property="pid"></result>
        <result column="createtime" property="createtime"></result>
        <result column="updatetime" property="updatetime"></result>
        <collection property="children" ofType="com.example.libary.entity.Category" column="id" select="selectByPid"></collection>
    </resultMap>
    <select id="selectByPid" resultType="com.example.libary.entity.Category">
        select * from category where pid = #{pid}
    </select>
    <select id="listByCondition" resultMap="categoryMap">
        select * from category
        <where>
            isnull(pid)
            <if test="name!= null and name != ''">
                and name like concat('%',#{name},'%')
            </if>
        </where>
        order by id desc
    </select>

    <insert id="save">
        insert into category(name, remark) values (#{name}, #{remark})
    </insert>
    <update id="updateById">
        update category
        set name = #{name}, remark = #{remark}, updatetime = #{updatetime} where id = #{id}
    </update>
    <delete id="deleteById">
        delete
        from category
        where id = #{id}
    </delete>
    <select id="list" resultType="com.example.libary.entity.Category">
        select * from category order by id desc
    </select>

    <select id="getById" resultType="com.example.libary.entity.Category">
        select * from category where id = #{id}
    </select>
</mapper>